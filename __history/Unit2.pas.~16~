const
  DonateLink =  'https://sites.google.com/view/little-beggar/%D0%B3%D0%BB%D0%B0%D0%B2%D0%BD%D0%B0%D1%8F';

var
  CreatorForm: TCreatorForm;
  sd, b : string;
  SMin, SMax : integer;

implementation

{$R *.dfm}

Function comparationFull (s :integer; b: string) :String;
Begin
	if s = 0
  then b := '0'
  else
    case s of
      1 : b:='1';
      2 : b:='2';
      3 : b:='3';
      4 : b:='4';
      5 : b:='5';
      6 : b:='6';
      7 : b:='7';
      8 : b:='8';
      9 : b:='9';
        10 : b:='a';
        11 : b:='b';
        12 : b:='c';
        13 : b:='d';
        14 : b:='e';
        15 : b:='f';
        16 : b:='g';
        17 : b:='h';
        18 : b:='i';
        19 : b:='j';
        20 : b:='k';
        21 : b:='l';
        22 : b:='m';
        23 : b:='n';
        24 : b:='o';
        25 : b:='p';
        26 : b:='q';
        27 : b:='r';
        28 : b:='s';
        29 : b:='t';
        30 : b:='u';
        31 : b:='v';
        32 : b:='w';
        33 : b:='x';
        34 : b:='y';
        35 : b:='z';
          36 : b:='A';
          37 : b:='B';
          38 : b:='C';
          39 : b:='D';
          40 : b:='E';
          41 : b:='F';
          42 : b:='G';
          43 : b:='H';
          44 : b:='I';
          45 : b:='J';
          46 : b:='K';
          47 : b:='L';
          48 : b:='M';
          49 : b:='N';
          50 : b:='O';
          51 : b:='P';
          52 : b:='Q';
          53 : b:='R';
          54 : b:='S';
          55 : b:='T';
          56 : b:='U';
          57 : b:='V';
          58 : b:='W';
          59 : b:='X';
          60 : b:='Y';
          61 : b:='Z';
    end;
  Result:=b;
end;

function Generator : string;
var i : integer;
   // b : string;
begin
  for i := SMin to SMax do
  begin
   // Writeln(f, comparationFull (s, b));
   // c:=c+1;
   showmessage(comparationFull (i, b));
  end;
  { for i := MinVal to MaxVal do
    result := comparationFull (i, b);}
end;

Procedure SetMinMax;
begin
  b := '';
  SMin := 0;
  if CreatorForm.DigCheck.Checked=true
    then SMax := 9
    else if CreatorForm.CaseSence.Checked=true
      then SMax := 61
      else SMax := 35;
  if CreatorForm.LettersCheck.Checked = true
    then SMin := 10;
end;

Procedure EndMessage(WordLong, GenTime, WordCount :string);
begin
    if CreatorForm.Thanks.Caption = 'Благодарности'
    then ShowMessage('Генерация завершена!'+#13+#10+'создано '+WordLong+'x символьных ключей - '+WordCount+#13+#10+'Время выполнения - '+GenTime)
    else ShowMessage('Generation completed!'+#13+#10+'created '+WordLong+'x character keys - '+WordCount+#13+#10+'lead time - '+GenTime)
end;

